# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key (optional)
GOOGLE_API_KEY=your_google_api_key_here

# Hugging Face Token (optional)
HF_TOKEN=your_huggingface_token_here

# Tavily API Key (optional)
TAVILY_API_KEY=your_tavily_api_key_here

# LangSmith API Key (optional)
LANGSMITH_API_KEY=your_langsmith_api_key_here

# PostgreSQL Database URL (Railway will provide this automatically)
# Required for persistent data storage (todos, profiles, instructions)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Database URL (Railway will provide this automatically) 
# Required for conversation state checkpointing
REDIS_URL=redis://user:password@host:port

# Port (Railway will set this automatically)
# PORT=8080

# Application Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=8080
PYTHONPATH=/app
